<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="175dp"
    android:layout_height="40dp"
    android:layout_margin="@dimen/small_spacer"
    android:background="@color/background_dark_highlighted"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/arrowLeft"
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:background="@color/background_dark"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/icon_arr_vid_left" />
    </LinearLayout>

    <TextView
        android:id="@+id/amountVideoTextView"
        style="@style/article_sidebar_title_style"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/arrowRight"
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:background="@color/background_dark"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_arr_vid_right" />
    </LinearLayout>

</LinearLayout>