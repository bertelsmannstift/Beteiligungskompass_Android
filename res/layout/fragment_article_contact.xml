<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        style="@style/article_text_title_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/small_spacer"
        android:layout_marginTop="@dimen/small_spacer"
        android:background="@drawable/article_text_divider_line" />

    <TextView
        android:id="@+id/expertAdress"
        style="@style/article_text_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/expertCity"
        style="@style/article_text_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textColor="@android:color/black" />

    <LinearLayout
        android:id="@+id/layoutEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView2"
            style="@style/article_text_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-Mail: "
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/expertEmail"
            style="@style/article_text_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:autoLink="email"
            android:text=""
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView2"
            style="@style/article_text_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefon: "
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/expertTel"
            style="@style/article_text_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:text=""
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutFax"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView3"
            style="@style/article_text_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fax: "
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/expertFax"
            style="@style/article_text_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:autoLink="phone"
            android:text=""
            android:textColor="@android:color/black" />
    </LinearLayout>

    <include layout="@layout/vertical_spacer_medium" />

</LinearLayout>